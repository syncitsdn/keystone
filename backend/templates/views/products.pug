extends ../layouts/default

block intro
	.container
		h1 Product
	
block content
	.container
		if products.length
			each product in products
				h2= product.title
					if product.publishedDate
						.pull-right.text-muted= product._.publishedDate.format('Do MMM YYYY')
				
				.row.gallery-images
					if product.heroImage.exists
						each image in product.images
							.col-xs-6.col-sm-4.col-md-3.gallery-image: img(src=image.limit(300,300)).img-rounded
		else
			h3.text-muted There are no image product yet.